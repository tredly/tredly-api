#!/bin/sh

# PROVIDE: tredly-api
# BEFORE:  LOGIN FILESYSTEMS
# KEYWORD: shutdown

. /etc/rc.subr

name="tredlyapi"
rcvar="tredlyapi_enable"

PATH="/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin:/root/bin"

command="/usr/local/bin/npm"
command_node="/usr/local/bin/node"

tredlyapi_directory="/usr/local/sbin/tredly-api"

start_cmd="${name}_start"
stop_cmd="${name}_stop"
restart_cmd="${name}_restart"
status_cmd="${name}_status"
log_cmd="${name}_log"
ssl_cmd="${name}_ssl"
config_cmd="${name}_config"
credentials_cmd="${name}_credentials"
extra_commands="status log ssl config credentials"

load_rc_config $name
: ${tredlyapi}_enable:=no}

tredlyapi_start()
{
    cd ${tredlyapi_directory}
    ${command} start
}

tredlyapi_stop()
{
    cd ${tredlyapi_directory}
    ${command} stop
}

tredlyapi_restart()
{
    tredlyapi_stop
    tredlyapi_start
}

tredlyapi_status()
{
    cd ${tredlyapi_directory}
    ${command} run list | ${command_node} /usr/local/sbin/tredly-api/lib/status.js
}
tredlyapi_log()
{
    cd ${tredlyapi_directory}
    ${command} run logs
}

tredlyapi_ssl()
{
    cd ${tredlyapi_directory}
    ./ssl.sh
}

tredlyapi_config()
{
    cd ${tredlyapi_directory}
    ${command} run config
}

tredlyapi_credentials()
{
    cd ${tredlyapi_directory}
    ${command} run credentials
}

load_rc_config $name
run_rc_command "$1"
